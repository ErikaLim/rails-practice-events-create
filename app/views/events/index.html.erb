<table>
  <thead>
    <tr>
      <th>
        Date
      </th>
      <th>
        Description
      </th>
      <th>
        Requires ID?
      </th>
      <th>
        Capacity
      </th>
      <th>
        Directions
      </th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= event.date %>
        </td>
        <td>
          <%= event.description %>
        </td>
        <td>
          <%= event.requires_id %>
        </td>
        <td>
          <%= event.capacity %>
        </td>
        <td>
          <%= event.directions %>
        </td>
        <td>
          <%= link_to("Edit", edit_event_path(event))%>
        </td>
        <td>
          <%= link_to('delete', event_path(event), {method: :delete}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




